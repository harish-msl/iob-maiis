# ============================================
# SPEECH/TTS PROVIDER CONFIGURATION
# IOB MAIIS - Speech Service Settings
# ============================================

# ============================================
# PROVIDER SELECTION
# ============================================
# Available STT providers: openai, google, azure, local, placeholder
STT_PROVIDER=openai

# Available TTS providers: elevenlabs, openai, google, azure, local, placeholder
TTS_PROVIDER=elevenlabs

# ============================================
# OPENAI WHISPER SETTINGS (STT)
# ============================================
# Required for STT_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key-here

# Whisper model version (whisper-1 is the latest)
OPENAI_WHISPER_MODEL=whisper-1

# API timeout in seconds
OPENAI_WHISPER_TIMEOUT=30

# Maximum retry attempts
OPENAI_WHISPER_MAX_RETRIES=3

# ============================================
# ELEVENLABS SETTINGS (TTS)
# ============================================
# Required for TTS_PROVIDER=elevenlabs
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Default voice ID (Rachel - Natural, clear female voice)
# Popular voices:
# - 21m00Tcm4TlvDq8ikWAM (Rachel - warm female)
# - pNInz6obpgDQGcFmaJgB (Adam - deep male)
# - EXAVITQu4vr4xnSDxMaL (Bella - soft female)
# - ErXwobaYiN019PkySvjV (Antoni - well-rounded male)
# - VR6AewLTigWG4xSOukaG (Arnold - crisp male)
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Model ID for TTS generation
# Options: eleven_monolingual_v1, eleven_multilingual_v1, eleven_multilingual_v2
ELEVENLABS_MODEL_ID=eleven_monolingual_v1

# Voice stability (0.0 - 1.0)
# Lower = more expressive and variable
# Higher = more stable and consistent
ELEVENLABS_STABILITY=0.5

# Similarity boost (0.0 - 1.0)
# Lower = more creative interpretation
# Higher = closer to original voice
ELEVENLABS_SIMILARITY_BOOST=0.75

# API timeout in seconds
ELEVENLABS_TIMEOUT=30

# ============================================
# GOOGLE CLOUD SPEECH SETTINGS (Optional)
# ============================================
# Required for STT_PROVIDER=google or TTS_PROVIDER=google
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key-here
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# STT Model configuration
GOOGLE_CLOUD_STT_MODEL=latest_long

# TTS Voice configuration
# Format: language-voice-type (e.g., en-US-Neural2-C)
GOOGLE_CLOUD_TTS_VOICE=en-US-Neural2-C

# ============================================
# AZURE SPEECH SETTINGS (Optional)
# ============================================
# Required for STT_PROVIDER=azure or TTS_PROVIDER=azure
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=eastus

# TTS Voice configuration
# Popular voices: en-US-AriaNeural, en-US-GuyNeural, en-GB-SoniaNeural
AZURE_TTS_VOICE=en-US-AriaNeural

# ============================================
# FALLBACK & RESILIENCE
# ============================================
# Enable fallback to local/placeholder providers if API fails
ENABLE_STT_FALLBACK=true
ENABLE_TTS_FALLBACK=true

# ============================================
# GENERAL SPEECH SETTINGS
# ============================================
# Default speech model (for backward compatibility)
SPEECH_MODEL=whisper-1

# Default language code (ISO 639-1)
SPEECH_LANGUAGE=en

# Audio sample rate in Hz (16000 recommended for speech)
SPEECH_SAMPLE_RATE=16000

# Maximum audio duration in seconds
SPEECH_MAX_DURATION=300

# ============================================
# QUICK START CONFIGURATIONS
# ============================================

# Configuration 1: Production (OpenAI + ElevenLabs)
# - Best quality, paid services
# - Requires API keys for both services
# STT_PROVIDER=openai
# TTS_PROVIDER=elevenlabs
# OPENAI_API_KEY=sk-...
# ELEVENLABS_API_KEY=...

# Configuration 2: Development (Placeholder providers)
# - Free, no API keys required
# - Lower quality, good for testing
# STT_PROVIDER=placeholder
# TTS_PROVIDER=placeholder

# Configuration 3: Hybrid (OpenAI STT + Placeholder TTS)
# - Good quality STT, free TTS
# - Only requires OpenAI API key
# STT_PROVIDER=openai
# TTS_PROVIDER=placeholder
# OPENAI_API_KEY=sk-...

# Configuration 4: All Google Cloud
# - Good quality for both STT and TTS
# - Requires Google Cloud setup
# STT_PROVIDER=google
# TTS_PROVIDER=google
# GOOGLE_CLOUD_API_KEY=...
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# ============================================
# PRICING NOTES (as of 2024)
# ============================================
# OpenAI Whisper: ~$0.006 per minute of audio
# ElevenLabs:
#   - Free tier: 10,000 characters/month
#   - Starter: $5/month for 30,000 characters
#   - Creator: $22/month for 100,000 characters
# Google Cloud Speech-to-Text: ~$0.006 per 15 seconds
# Google Cloud Text-to-Speech: ~$4 per 1M characters
# Azure Speech: ~$1 per audio hour (STT), ~$16 per 1M characters (TTS)

# ============================================
# TROUBLESHOOTING
# ============================================
# If you encounter errors:
# 1. Verify API keys are correct and have not expired
# 2. Check that your account has available credits/quota
# 3. Ensure ENABLE_STT_FALLBACK and ENABLE_TTS_FALLBACK are set to true
# 4. Check logs for specific error messages
# 5. Test with placeholder providers first: STT_PROVIDER=placeholder, TTS_PROVIDER=placeholder
# 6. Verify network connectivity to API endpoints
